@model Portal.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля пользователя";
}


<h2>Изменение пароля пользователя</h2>
<hr/>

<div class="clearfix">
    <div class="col-md-4">
        <section>
            <form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="PasswordConfirm">Подтверждение пароля</label>
                    <input asp-for="PasswordConfirm" class="form-control"/>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <input type="submit" value="Изменить" class="btn btn-default"/>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-default" role="button" aria-pressed="true">Отмена</a>
                </div>
            </form>

        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}